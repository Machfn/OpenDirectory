<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/public/general.css">
	<title>File Selection</title>
</head>
<body>
	<%- include('partials/header', {folders: fldrs}); %>
	<div id="main">
		<h1>Directory: <%= folder %></h1>
		<div id="fileList">
			<% files.forEach((file) => { %>
				<a href=<%=`/viewer?file=${folder}_${file}`%>> <%= file %></a>
			<% }); %>
		</div>
	</div>
	<style>
		body {
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: space-evenly;
		}
		#main {
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: space-evenly;
		}
		#fileList {
			display: flex;
			flex-direction: row;
			justify-content: space-evenly;
			flex-wrap: wrap;
		}
		#fileList a {
			min-width: 150px;
			font-size: inherit;
			width: 10vw;
			margin: 1vw;
			padding: 5px;
			background: rgba(120,120,120, 0.7);
			border-radius: 10px;
			text-decoration: none;
			height: 5vh;
			display: flex;
			justify-content: center;
			align-items: center;
		}
		#fileList a:hover {
			background-color: greenyellow;
		}
	</style>
</body>
</html>
